<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ScrollView -->

    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Activity_main.xml styles -->

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_xxl</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
    </style>

    <style name="TitleStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_subtitle</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <!-- Activity_quiz.xml styles -->

    <style name="ShowAnswerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
    </style>

    <style name="ChechedKnowledgeQuestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_quiz_question</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
    </style>

    <style name="CheckedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="QuestionQuiz">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_quiz_question</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SeparatorLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_separator_line</item>
        <item name="android:background">@color/colorSeparatorLineBackground</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AnswerQuiz" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <!-- Activity_exam.xml styles -->

    <style name="ExamInformation" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/colorLightBackground</item>
    </style>

    <style name="ExamQuestion" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
    </style>

    <style name="AnswerEditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_edittext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
    </style>


    <!-- Activity_result.xml styles -->

    <style name="CongratulationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/result_title</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
    </style>

    <style name="ResultText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_result</item>
        <item name="android:paddingTop">@dimen/padding_xl</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ResultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
    </style>


    <!-- Activity_config.xml styles -->

    <style name="NameEditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CategoriesTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_config_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="CategoryCheckBoxLeft" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="CategoryCheckBoxRight" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShuffleCardsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_config_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="RadioGroupShuffleCards">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="RadioButtonShuffleCards">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StartQuizButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

</resources>
